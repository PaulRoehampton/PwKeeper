<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PwKeeper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azure_2</item>
        <item name="colorPrimaryVariant">@color/azure_3</item>
        <item name="colorOnPrimary">@color/azure_1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/azure_4</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="AppTheme.PwKeeper" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Fullscreen theme for the main activity -->
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>